<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/signin.css">
    <title>Chat App</title>
</head>
<body>

<div class="border-bottom">
    <form class="form-inline p-2 col-10 offset-4"> <!--offset-4-->
        <div class="row">
          <div class="col-sm-3 ">
            <input type="text" class="form-control" placeholder="Username">
          </div>
          <div class="col-sm-3">
            <input type="password" class="form-control" placeholder="Password">
          </div>
          <div class="col-sm-3">
            <button type="button" onclick="signin();" class="btn btn-dark">Sign in</button>
          </div>
        </div>
      </form>
</div>

<div class="container">
    <div class="row mt-5 offset-4 col-8">
        <h2>Register to Chat App!</h2>
    </div>

    <form class="mt-2">        
        <div class="form-group offset-4 row">
            <div class="col-6 m-1">
                <input type="text" id="name" class="form-control" placeholder="Name">
            </div>
        </div>
        <div class="emailDiv form-group offset-4 row">
            <div class="col-6 m-1">
                <input type="text" id="email" class="form-control" placeholder="Email">
            </div>
        </div>
        <div class="form-group offset-4 row">
            <div class="col-6 m-1">
                <input type="password" id="password" class="form-control" placeholder="Password">
            </div>
        </div>
        <div class="form-group offset-4 row">
            <div class="col-8 m-1">
                <button onclick="register();" type="button" class="btn btn-dark">Register</button>
            </div>
        </div>
    </form>

</div>

    <script src="js/bootstrap.min.js"></script>
    <script src="js/signin.js"></script>
</body>
</html>